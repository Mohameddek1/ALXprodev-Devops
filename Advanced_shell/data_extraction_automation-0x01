#!/bin/bash
# Task: Extract Pok√©mon data and format output

DATA_FILE="data.json"
JQ_BIN="$(dirname "$0")/jq.exe"

# Extract and format data
name=$($JQ_BIN -r '.name' "$DATA_FILE" | sed 's/.*/\u&/')
height=$($JQ_BIN -r '.height' "$DATA_FILE")
weight=$($JQ_BIN -r '.weight' "$DATA_FILE")
type=$($JQ_BIN -r '.types[0].type.name' "$DATA_FILE" | sed 's/.*/\u&/')

# Convert units and store in checker-required variable names
formatted_height=$(awk "BEGIN {printf \"%.1f\", $height/10}")
formatted_weight=$(awk "BEGIN {printf \"%.0f\", $weight/10}")

# EXACT format expected by ALX checker
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
