#!/bin/bash
# Task: Summarize PokÃ©mon Data into CSV

INPUT_DIR="pokemon_data"
OUTPUT_FILE="pokemon_report.csv"

# Ensure jq is available in the current dir (Windows/Git Bash friendly)
JQ="./Advanced_shell/jq.exe"

# Check if jq exists
if [[ ! -f "$JQ" ]]; then
    echo "Error: jq executable not found at $JQ"
    exit 1
fi

# Create CSV header
echo "Name,Height (m),Weight (kg)" > "$OUTPUT_FILE"

# Loop through JSON files
for file in "$INPUT_DIR"/*.json; do
    name=$("$JQ" -r '.name' "$file" | sed 's/.*/\u&/')
    height_dm=$("$JQ" -r '.height' "$file")
    weight_hg=$("$JQ" -r '.weight' "$file")

    # Convert to meters and kilograms
    height_m=$(awk "BEGIN {printf \"%.1f\", $height_dm/10}")
    weight_kg=$(awk "BEGIN {printf \"%.1f\", $weight_hg/10}")

    echo "$name,$height_m,$weight_kg" >> "$OUTPUT_FILE"
done

echo
echo "CSV Report generated at: $OUTPUT_FILE"
echo

# Display the CSV
cat "$OUTPUT_FILE"
echo

# Calculate averages
awk -F',' 'NR>1 {sum_h+=$2; sum_w+=$3; count++}
END {
    if (count > 0) {
        printf "Average Height: %.2f m\n", sum_h/count
        printf "Average Weight: %.2f kg\n", sum_w/count
    }
}' "$OUTPUT_FILE"
