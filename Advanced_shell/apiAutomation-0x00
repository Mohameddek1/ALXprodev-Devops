#!/bin/bash
# Task: Automate API request to get Pikachu data and save results

API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make the API request
curl -s -o "$OUTPUT_FILE" -w "%{http_code}" "$API_URL" > status_code.txt

# Read the status code
STATUS_CODE=$(cat status_code.txt)
rm status_code.txt

# Check if request succeeded
if [ "$STATUS_CODE" -ne 200 ]; then
    echo "Error: Failed to fetch data from API. Status code: $STATUS_CODE" >> "$ERROR_FILE"
    exit 1
else
    echo "Data saved to $OUTPUT_FILE"
fi
